<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.space_game_v2.feature.game.ScrollingBackgroundView
        android:id="@+id/scrolling_background_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Approve Button -->
    <Button
        android:id="@+id/button_approve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:text="Approve" />

    <!-- Disapprove Button -->
    <Button
        android:id="@+id/button_disapprove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:text="Disapprove" />


    <TextView
        android:id="@+id/tvEconomy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:shadowColor="#FF0000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="3"
        android:text="$0"
        android:textColor="#FFFF00"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/heart1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/heart_icon"
        android:adjustViewBounds="true"
        android:maxWidth="25dp"
        android:maxHeight="25dp" />

    <ImageView
        android:id="@+id/heart2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/heart1"
        android:layout_marginStart="8dp"
        android:layout_alignTop="@id/heart1"
        android:src="@drawable/heart_icon"
        android:adjustViewBounds="true"
        android:maxWidth="25dp"
        android:maxHeight="25dp" />

    <ImageView
        android:id="@+id/heart3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/heart2"
        android:layout_marginStart="8dp"
        android:layout_alignTop="@id/heart2"
        android:src="@drawable/heart_icon"
        android:adjustViewBounds="true"
        android:maxWidth="25dp"
        android:maxHeight="25dp" />





</RelativeLayout>
