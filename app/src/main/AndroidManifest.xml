<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Spacegamev2"
        tools:targetApi="31">
        <service
            android:name=".BackgroundMusicService"
            android:enabled="true"
            android:exported="false"></service> <!-- Assuming service is internal -->

        <activity
            android:name=".feature.game.GameActivity"
            android:exported="false" /> <!-- No intent filter so not exported -->

        <activity
            android:name=".feature.main.MainActivity"
            android:exported="true"> <!-- This activity is the entry point so it is exported -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Other activities and components here -->
    </application>
</manifest>
